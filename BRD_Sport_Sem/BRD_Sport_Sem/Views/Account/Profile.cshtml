@model BRD_Sport_Sem.Models.ViewModel.ProfileViewModel
<div id="Prof">
    <form action="/@Model.UserId/Image" method="post">
        <p><img src="/@Model.UserId/Image" /></p>
    </form>  
    <p>Имя: @Model.Name</p>
    <p>Фамилия: @Model.Surname</p>
    <p>Почта: @Model.Email</p>
    <form action="ProfileEdit" method="post">
        <input type="file" name="file" placeholder="Сменить аватар">
        <button formmethod="post">Post</button>
    </form>
</div>